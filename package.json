{
  "name": "bootlint",
  "version": "0.14.2",
  "description": "HTML linter for Bootstrap projects",
  "keywords": [
    "bootstrap",
    "checker",
    "correctness",
    "html",
    "lint",
    "linter",
    "validator",
    "validity"
  ],
  "homepage": "https://github.com/twbs/bootlint",
  "bugs": {
    "url": "https://github.com/twbs/bootlint/issues"
  },
  "author": {
    "name": "Chris Rebert",
    "email": "code@rebertia.com",
    "url": "http://chrisrebert.com"
  },
  "contributors": [
    {
      "name": "Heinrich Fenkart",
      "email": "hnrch02@gmail.com",
      "url": "http://hnrch02.me"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/twbs/bootlint.git"
  },
  "license": "MIT",
  "scripts": {
    "browserify": "browserify src/bootlint.js | node build/stamp.js > dist/browser/bootlint.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dist": "npm run browserify",
    "eslint": "eslint \"**/*.js\"",
    "lint": "npm run eslint",
    "nodeunit": "nodeunit test",
    "qunit": "phantomjs ./node_modules/qunit-phantomjs-runner/runner.js js/test/fixtures/**/*.html --timeout=10",
    "start": "node ./bin/www",
    "test": "npm run eslint && npm run dist && npm run nodeunit && npm run qunit",
    "travis": "npm run eslint && npm run dist && nyc npm run nodeunit && npm run qunit"
  },
  "dependencies": {
    "binary-search": "^1.3.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "chalk": "^2.1.0",
    "cheerio": "^0.22.0",
    "commander": "^2.11.0",
    "debug": "^3.0.0",
    "express": "^4.15.4",
    "glob": "^7.1.2",
    "morgan": "^1.8.2",
    "semver": "^5.4.1",
    "void-elements": "^3.1.0"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "coveralls": "^2.13.1",
    "eslint": "^4.4.1",
    "jquery": "^3.2.1",
    "nodeunit": "^0.11.1",
    "nyc": "^11.1.0",
    "phantomjs-prebuilt": "^2.1.14",
    "qunit-phantomjs-runner": "^2.3.0",
    "qunitjs": "^2.4.0",
    "rewire": "^2.5.2",
    "sinon": "^3.1.0"
  },
  "main": "./src/bootlint.js",
  "bin": {
    "bootlint": "./src/cli-main.js"
  },
  "browser": {
    "binary-search": false,
    "cheerio": "jquery",
    "url": "./src/url.js",
    "./src/cli.js": false,
    "./src/cli-main.js": false,
    "./src/location.js": false
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ]
  },
  "engines": {
    "node": ">=4"
  },
  "files": [
    "bin",
    "dist",
    "src",
    "app.js"
  ]
}
